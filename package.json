{
  "name": "react-global-modal",
  "private": false,
  "version": "0.0.24",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-global-modal.es.js",
      "require": "./dist/react-global-modal.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/react-global-modal.umd.js",
