    "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
    "format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16 || ^17 || ^18",
    "react-dom": "^0.14.0 || ^15.0.0 || ^16 || ^17 || ^18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
